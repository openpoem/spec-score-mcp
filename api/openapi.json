{
  "openapi": "3.1.0",
  "info": {
    "title": "Spec Score API",
    "description": "Score specs on 4 axes and generate radar chart visualizations.",
    "version": "2.0.0"
  },
  "servers": [
    {
      "url": "https://spec-score-mcp.vercel.app"
    }
  ],
  "paths": {
    "/api/score": {
      "post": {
        "operationId": "scoreSpec",
        "summary": "Score a spec on 4 axes and get balance score + verdict",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": ["completeness", "clarity", "constraints", "specificity"],
                "properties": {
                  "completeness": { "type": "number", "description": "Completeness score 0.0-1.0" },
                  "clarity": { "type": "number", "description": "Clarity score 0.0-1.0" },
                  "constraints": { "type": "number", "description": "Constraints score 0.0-1.0" },
                  "specificity": { "type": "number", "description": "Specificity score 0.0-1.0" },
                  "weakest": { "type": "string", "description": "Which axis is weakest" },
                  "tip": { "type": "string", "description": "One tip to improve the weakest axis" }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Scoring result",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "verdict": { "type": "string" },
                    "balance": { "type": "number" },
                    "balance_label": { "type": "string" },
                    "axes": { "type": "array", "items": { "type": "object", "properties": { "axis": { "type": "string" }, "value": { "type": "number" } } } },
                    "weakest": { "type": "string" },
                    "strongest": { "type": "string" },
                    "tip": { "type": "string" }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/api/visualize": {
      "post": {
        "operationId": "visualizeSpec",
        "summary": "Score a spec and return an SVG radar chart",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": ["completeness", "clarity", "constraints", "specificity"],
                "properties": {
                  "completeness": { "type": "number", "description": "Completeness score 0.0-1.0" },
                  "clarity": { "type": "number", "description": "Clarity score 0.0-1.0" },
                  "constraints": { "type": "number", "description": "Constraints score 0.0-1.0" },
                  "specificity": { "type": "number", "description": "Specificity score 0.0-1.0" },
                  "weakest": { "type": "string", "description": "Which axis is weakest" },
                  "tip": { "type": "string", "description": "One tip to improve the weakest axis" },
                  "title": { "type": "string", "description": "Optional title above the radar chart" }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "SVG radar chart",
            "content": {
              "text/plain": {
                "schema": { "type": "string" }
              }
            }
          }
        }
      }
    },
    "/api/compare": {
      "post": {
        "operationId": "compareSpecs",
        "summary": "Compare two specs side-by-side with radar charts",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": ["left", "right"],
                "properties": {
                  "left": {
                    "type": "object",
                    "required": ["completeness", "clarity", "constraints", "specificity"],
                    "properties": {
                      "completeness": { "type": "number", "description": "Completeness score 0.0-1.0" },
                      "clarity": { "type": "number", "description": "Clarity score 0.0-1.0" },
                      "constraints": { "type": "number", "description": "Constraints score 0.0-1.0" },
                      "specificity": { "type": "number", "description": "Specificity score 0.0-1.0" },
                      "weakest": { "type": "string", "description": "Which axis is weakest" },
                      "tip": { "type": "string", "description": "One tip to improve" },
                      "title": { "type": "string", "description": "Title for left chart" }
                    }
                  },
                  "right": {
                    "type": "object",
                    "required": ["completeness", "clarity", "constraints", "specificity"],
                    "properties": {
                      "completeness": { "type": "number", "description": "Completeness score 0.0-1.0" },
                      "clarity": { "type": "number", "description": "Clarity score 0.0-1.0" },
                      "constraints": { "type": "number", "description": "Constraints score 0.0-1.0" },
                      "specificity": { "type": "number", "description": "Specificity score 0.0-1.0" },
                      "weakest": { "type": "string", "description": "Which axis is weakest" },
                      "tip": { "type": "string", "description": "One tip to improve" },
                      "title": { "type": "string", "description": "Title for right chart" }
                    }
                  },
                  "title": { "type": "string", "description": "Main title above both charts" }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Side-by-side SVG comparison",
            "content": {
              "text/plain": {
                "schema": { "type": "string" }
              }
            }
          }
        }
      }
    }
  }
}
